<Window x:Class="FileNameTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Tag="clr-namespace:FileNameTagger.Tag"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileNameTagger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type Tag:TagViewModel}">
            <Tag:TagView/>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Load File"/>
                <MenuItem Header="_New Tag"/>
                <MenuItem Header="_Save Tag"/>
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl Content="{Binding TagViewModel}"/>
        </Grid>
    </StackPanel>

</Window>

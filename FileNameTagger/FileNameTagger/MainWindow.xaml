<Window x:Class="FileNameTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:FileNameTagger"
        xmlns:shared="clr-namespace:Shared;assembly=Shared"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="StaticCheckboxDataTemplate">
            <Border Name="border" BorderBrush="DarkSlateBlue" BorderThickness="2"
                CornerRadius="2" Padding="5" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CheckBox IsChecked="{Binding Path=IsChecked}">
                        <WrapPanel>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Name}"/>
                        </WrapPanel>
                    </CheckBox>
                </Grid>
            </Border>
        </DataTemplate>
        <!--For data binding the enum-->
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                        ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="shared:ResolutionsEnum"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <StackPanel>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Load File"
                          Command ="{Binding AddFileCommand}">
                </MenuItem>
                <MenuItem Header="_New Tag"/>
                <MenuItem Header="_Save Tag"
                          Command="{Binding SaveTagCommand}"/>
            </MenuItem>
        </Menu>
        <Grid x:Name ="ChildViews">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Tag" 
                               Background="Black" 
                               Foreground="White"
                               Height="Auto"
                               Width="Auto">
                </TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <TextBlock>Selected File: </TextBlock> 
                    <TextBlock Text="{Binding LoadedFile.Name}"/>
                </StackPanel>
                <Expander Header="Studio">
                    <ListBox ItemsSource="{Binding Studios}"
                             ItemTemplate="{StaticResource StaticCheckboxDataTemplate}"
                             IsSynchronizedWithCurrentItem="True"/>
                </Expander>
                <Grid x:Name="TitleBox">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">Title: </TextBlock>
                    <TextBox Grid.Column ="1" Margin="5" Padding="5"/>
                </Grid>
                <ComboBox HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="150" SelectedItem="{Binding SelectedResolution}"
                          ItemsSource="{Binding Source={StaticResource dataFromEnum}}"/>
                <Expander Header="Actors">
                    <ListBox ItemsSource="{Binding Actors}"
                             ItemTemplate="{StaticResource StaticCheckboxDataTemplate}"
                             IsSynchronizedWithCurrentItem="True"/>
                </Expander>
                <Expander Header="Categories">
                    <ListBox ItemsSource="{Binding Categories}"
                             ItemTemplate="{StaticResource StaticCheckboxDataTemplate}"
                             IsSynchronizedWithCurrentItem="True"/>
                </Expander>
                <Label>Release Date:</Label>
                <DatePicker SelectedDate="{Binding ReleaseDate}" ></DatePicker>
                <Grid x:Name="ExportedTag">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0">Exported Tag:</TextBlock>
                    <TextBox IsReadOnly="True" Grid.Column="1" Text="{Binding ExportedTag}" Margin="5"></TextBox>
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>

</Window>
